.maincontent {
  background-color: #ededf5;
}

.maincontent .container {
  display: flex;
  flex-direction: column;
}

.maincontent__top-panel {
  display: flex;
  margin: 30px 0;
}

.maincontent__title {
  margin-right: 59px;
}

.button__group-add {
  display: flex;
  color: $orange;
  background: none;
  border: none;
}

.button__group-add .add-icon {
  width: 21px;
  fill: black;
  height: 21px;
  margin-right: 13px;
}

.button__group-add-text {
  white-space: nowrap;
  font-weight: 700;
}