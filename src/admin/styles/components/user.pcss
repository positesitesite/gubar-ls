.user {
  padding: 16px 0;
  display: flex;
  align-items: center;
}

.user__img {
  &-wrapper {
    margin-right: 20px;
    max-width: 45px;
    height: 100%;
  }

  border-radius: 50%;
  height: 100%;
  width: 100%;
}

.user__name {
  color: #fff;
  margin-right: 28px;
}

.user__breadcrumb {
  color: #c0c0c0;
}

.user__logout {
  color: #c0c0c0;
}