.footer .container {
  align-items: flex-start;
  padding-top: 86px;
  padding-left: 100px;
}

.footer__column {
  position: relative;
  margin-right: 108px;
}

.footer__nav {
  display: flex;
}

.footer__row {
  display: flex;
  margin-bottom: 70px;
}

.footer__descr {
  width: 80%;
  margin-bottom: 30px;
}

.footer__title.sub-title {
  color: $white;
  margin-bottom: 34px;
}

.footer__nav-item {
  margin-right: 80px;
}

.footer__socials {
  display: flex;
}

.footer__socials__item {
  display: flex;
  justify-content: space-around;
  background-color: transparent;
  border: 1px solid #fff;
  height: 3.125rem;
  width: 3.125rem;
  margin-right: 1.9375rem;
  padding: 0.8125rem 1.25rem;
  border-radius: 50%;
  margin-right: 20px;

  &-icon {
    fill: $grey;
    width: 20px;
    // height: 100%;

    &:hover {
      fill: $white;
    }
  }

  &:last-child {
    margin-right: 0;
  }
}

.footer__quote {
  margin-bottom: 35px;
  width: 70%;
}

.footer__quote-author {
  color: white;
  font-style: italic;
}

