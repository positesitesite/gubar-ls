.about {
  position: absolute;
  top: 60%;
  display: flex;
  justify-content: center;
  align-items: center;

  width: 100%;
}

.about .container {
  justify-content: center;
  z-index: 10;
}

.about__parallax-grass {
  position: absolute;
  top: -46%;
  object-fit: cover;
  z-index: 1;

  width: 100%;
}

.about__parallax-code {
  position: absolute;
  top: 0;
  object-fit: cover;

  height: 100%;
}

.about__brief {
  margin-right: 158px;
  width: 20%;
}

.about__descr {
  width: 50%;
}

.about__descr-text.title {
  font-size: 36px;
  margin: 30px 0 38px 0;
}

.about__descr-text-comment {
  margin-top: 105px;
}